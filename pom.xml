		<plugins>
			<plugin>
				<groupId>com.github.maven-nar</groupId>
				<artifactId>nar-maven-plugin</artifactId>
				<version>3.6.0</version>
				<extensions>true</extensions>
				<configuration>
					<os>Linux</os>
					<skipTests>true</skipTests>
					<libraries>
						<library>
							<linkCPP>false</linkCPP>
							<type>executable</type>
							<run>true</run>
						</library>
					</libraries>
					<linker>
						<sysLibs>
							<sysLib>
								<name>dl</name>
							</sysLib>
							<sysLib>
								<name>pthread</name>
							</sysLib>
						</sysLibs>
					</linker>
					<cpp>
						<name>gcc</name>
						<multiThreaded>true</multiThreaded>
						<exceptions>false</exceptions>
						<debug>true</debug>
						<options>
							<option>-g</option>
							<option>-std=gnu99</option>
							<option>-Wall</option>
						</options>
						<clearDefaultOptions/>
					</cpp>
					<c>
						<name>gcc</name>
						<multiThreaded>true</multiThreaded>
						<exceptions>false</exceptions>
						<debug>true</debug>
						<options>
							<option>-g</option>
							<option>-std=gnu99</option>
							<option>-Wall</option>
						</options>
						<clearDefaultOptions/>
					</c>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
<!--					<compilerArgs>-->
<!--						<arg>-h</arg>-->
<!--						<arg>./target/classes</arg>-->
<!--					</compilerArgs>-->
				</configuration>
			</plugin>
